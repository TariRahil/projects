
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="ir.dpi.cap.DriverFragment"
    android:visibility="gone"
    android:background="#e6ffe6"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="نام راننده"
        android:textColor="#000"
        android:id="@+id/txtDriverName"
        android:layout_weight="5" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:id="@+id/imgDriver" />


</LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="horizontal"
       android:layout_weight="2">


       <Button
           android:text="تماس با راننده"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/btnCallDriver"
           android:background="#66ff33"
           android:textColor="#003300"

           android:layout_weight="2" />
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="3"
           android:text=""
           android:id="@+id/txtDriverPlateNumber"
           />


   </LinearLayout>




</LinearLayout>

